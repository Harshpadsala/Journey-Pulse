<% layout("/layouts/boilerplate.ejs") %>
<div class="row mt-3">
<div class="col-8 offset-2">


<h2>Edit your listing</h2>
<hr>

<form action="/listings/<%= listing._id %>?_method=put" method="post" novalidate class="needs-validation" enctype="multipart/form-data">

        <div class="mb-3">
                <label for="title" 
                        class = "form-label">Title </label>
                <input type="text" 
                        name="listing[title]" 
                        placeholder="add a catchy title" 
                        value=<%= listing.title %>
                        class = "form-control"
                        required>
                        <div class="valid-feedback">Title looks good</div>
                        <div class="invalid-feedback">Title should be valid</div>
        </div>

        <div class="mb-3">
                <label for="description" 
                        class = "form-label">Description</label>
                <textarea name="listing[description]" 
                                cols="30" 
                                rows="5" 
                                class = "form-control"
                                required><%= listing.description %></textarea>
                
                <div class="valid-feedback">Description looks good</div>
                <div class="invalid-feedback">Description should be valid</div>
        </div>

        <div class="mb-3">
                Original Listing Image <br>
                <img src="<%= originalImageUrl %>" alt="original listing image">
        </div>

        <div class="mb-3">
                <label for="image" 
                        class = "form-label">Upload new Image</label>
                <input name="listing[image]" 
                        type="file"
                        class = "form-control">
                        <div class="valid-feedback">Image Link looks good</div>
                        <div class="invalid-feedback">Image Link should be valid</div>
                </div>
                <div class="row">
                <div class="mb-3 col-md-4">
                        <label for="price" 
                                class = "form-label">Price</label>
                        <input type="number" 
                                name="listing[price]" 
                                placeholder="1200"
                                value=<%= listing.price %>
                                class = "form-control"
                                required>
                                <div class="valid-feedback">Price looks good</div>
                                <div class="invalid-feedback">Price should be valid</div>
                        </div>

                        <div class="mb-3 col-md-8">
                                <label for="country" 
                                        class = "form-label">Country</label>
                                <input type="text" 
                                        name="listing[country]" 
                                        placeholder="India"
                                        value=<%= listing.country %>
                                        class = "form-control"
                                        required>
                                        <div class="valid-feedback">Country Name looks good</div>
                                        <div class="invalid-feedback">Country Name be valid</div>
                        </div>
                        
        </div>

        <div class="mb-4">
                <label for="location" 
                        class = "form-label">Location</label>
                <input type="text" 
                        name="listing[location]" 
                        placeholder="Surat"
                        value=<%= listing.location %>
                        class = "form-control"
                        required >
                        <div class="valid-feedback">Location looks good</div>
                        <div class="invalid-feedback">Location should be valid</div>
                </div>

        <button class="btn btn-dark mb-5 edit-btn ">Edit</button>
</form>
</div>
</div>
